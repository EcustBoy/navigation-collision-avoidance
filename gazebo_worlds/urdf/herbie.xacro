<?xml version="1.0" ?>
<robot name="herbie" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="$(find gazebo_worlds)/urdf/herbie.gazebo" />
    <xacro:include filename="$(find gazebo_worlds)/urdf/macros.xacro" />
    
        <link name="link_chassis">
        <!-- pose and inertial -->
        <pose>0 0 0 0 0 0</pose>
        <inertial>
            <mass value="1"/>
            <origin rpy="0 0 0" xyz="0 0 0.079625"/>
            <xacro:cylinder_inertia mass="1" r="0.075" l="0.11125" />
        </inertial>
        <!-- body -->
        <collision name="collision_chassis">
            <origin rpy="0 0 0" xyz="0 0 0.079625"/>
            <geometry>
                <cylinder radius="0.075" length="0.11125"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.079625"/>
            <geometry>
                <cylinder radius="0.075" length="0.11125"/>
            </geometry>
        </visual>
        <!-- caster front -->
        <collision name="caster_front_collision">
            <origin rpy=" 0 0 0" xyz="0.04925 0 0.012"/>
            <geometry>
                <sphere radius="0.012"/>
            </geometry>
            <surface>
                <friction>
                <ode>
                    <mu>0</mu>
                    <mu2>0</mu2>
                    <slip1>1.0</slip1>
                    <slip2>1.0</slip2>
                </ode>
                </friction>
            </surface>
        </collision>
        <visual name="caster_front_visual">
        <origin rpy=" 0 0 0" xyz="0.04925 0 0.012"/>
        <geometry>
            <sphere radius="0.012"/>
        </geometry>
        </visual>
    </link>
  
    <link name="link_right_wheel">
        <inertial>
            <mass value="0.1"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <xacro:cylinder_inertia mass="0.1" r="0.0313" l="0.025" />
        </inertial>
        <collision name="link_right_wheel_collision">
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
            <cylinder length="0.025" radius="0.0313"/>
            </geometry>
        </collision>
        <visual name="link_right_wheel_visual">
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
            <cylinder length="0.025" radius="0.0313"/>
            </geometry>
        </visual>
    </link>

    <link name="link_left_wheel">
        <inertial>
            <mass value="0.1"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <xacro:cylinder_inertia mass="0.1" r="0.0313" l="0.025" />
        </inertial>
        <collision name="link_left_wheel_collision">
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
            <cylinder length="0.025" radius="0.0313"/>
            </geometry>
        </collision>
        <visual name="link_left_wheel_visual">
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
            <cylinder length="0.025" radius="0.0313"/>
            </geometry>
        </visual>
    </link>

    <joint name="joint_right_wheel" type="continuous">
        <origin rpy="-1.5708 0 0" xyz="0 -0.054 0.03125"/>
        <child link="link_right_wheel"/>
        <parent link="link_chassis"/>
        <axis rpy="0 0 0" xyz="0 0 1"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>

    <joint name="joint_left_wheel" type="continuous">
        <origin rpy="-1.5708 0 0" xyz="0 0.054 0.03125"/>
        <child link="link_left_wheel"/>
        <parent link="link_chassis"/>
        <axis rpy="0 0 0" xyz="0 0 1"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>

</robot>
